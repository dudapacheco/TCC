<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cadastroEvolucao">

    <ScrollView
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/evolucao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Evolução" />

            <TextView
                android:id="@+id/periodo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Período" />

            <TextView
                android:id="@+id/de"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="De:" />

            <EditText
                android:id="@+id/dedata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="date" />

            <TextView
                android:id="@+id/ate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Até" />

            <EditText
                android:id="@+id/atedata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="date" />

            <TextView
                android:id="@+id/medidas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Medidas" />

            <TextView
                android:id="@+id/peso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Peso (Kg):" />

            <EditText
                android:id="@+id/pesoedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="130dp" />

            <TextView
                android:id="@+id/altura"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Altura" />

            <EditText
                android:id="@+id/alturaedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/peito"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Peito" />

            <EditText
                android:id="@+id/peitoedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:id="@+id/costas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Costas"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="303dp" />

            <EditText
                android:id="@+id/costasedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="320dp" />

            <TextView
                android:id="@+id/cintura"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cintura" />

            <EditText
                android:id="@+id/cinturaedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/quadril"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quadril"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="427dp" />

            <EditText
                android:id="@+id/quadriledit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/coxad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <EditText
                android:id="@+id/coxadireitaedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/coxaesquerda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Coxa Esquerda" />

            <EditText
                android:id="@+id/coxaesquerdaedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/bicepsd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bíceps Direito" />

            <EditText
                android:id="@+id/bicepsdedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/bicepse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bíceps Esquerdo" />

            <EditText
                android:id="@+id/bicepseedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/subescapular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Subescapular" />

            <EditText
                android:id="@+id/subesedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/abdomen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Abdômen" />

            <EditText
                android:id="@+id/abdomenedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>